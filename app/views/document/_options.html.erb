<% unless themes.blank? %>
<section id="options">
	<header>
		<h2 class="section-title">
			Approfondir : M&ecirc;mes sujets, autres approches
		</h2>
	</header>
	<ul>
		<% themes.each do |theme| %>
			<li>
				<h3><%= theme.name %></h3>
				<ul class="link-list">

					<% theme.options.each do |option| %>
						<%= render 'option', option: option %>
					<% end %>

				</ul>
			</li>
		<% end %>

	</ul>
</section>
<% end %>