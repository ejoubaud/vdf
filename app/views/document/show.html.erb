<section class="body <%= @docu.name %>">

<nav class="body-nav">
	<ul class="nav">
		<li><a href="#id-card">ID Card</a></li>
		<li><a href="#checklist">Checklist</a></li>
		<li><a href="#critics">Critiques</a></li>
		<li><a href="#dig-it">Alternatives</a></li>
	</ul>
	<h2 class="page-title"><a href="#"><span class="prefix">VDF::</span><span class="short-name"><%= @docu.name %></span></a></h2>
</nav>

<section id="id-card" class="id-card">
	<div class="poster"><%= image_tag(@docu.poster) %></div>
	<h3 class="docu-title"><%= @docu.title %></h3>
	<h4 class="docu-subtitle"><%= @docu.subtitle %></h4>
	<div class="tag-list">
		<a href="#">tags need handling</a>
		<a href="#">tag2</a>
		<a href="#">tag3</a>
	</div>

	<% if !@docu.creator_url.blank? %>
		<p class="editor"><%= link_to @docu.creator, @docu.creator_url, :rel => 'nofollow' %></p>
	<% elsif !@docu.creator_url.blank? %>
		<p class="editor"><%= @docu.creator %></p>
	<% end %>

	<div class="summary text-unit">
		<%= raw @docu.description %>
	</div>
	<p class="impact"><%= raw @docu.impact %></p>
	
</section>

</section>
