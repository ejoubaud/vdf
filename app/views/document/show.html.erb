<% content_for :title, @doc.title %>
<%= render 'shared/body_nav', title: @doc.name, nav_list: nav_list(:show, @doc) %>

<% content_for(:auth_bar){ link_to('Modifier', { controller: 'document', action: 'edit', id: @doc.id }) + ' | ' } if can? :edit, @doc %>

<%= render 'id_card', doc: @doc %>
<%= render 'checklist', checklist: @doc.checks %>
<%= render 'reviews', reviews: @doc.reviews %>
<%= render 'options', themes: @doc.themes %>

