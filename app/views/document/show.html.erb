<section class="body <%= @doc.name %>">

<nav class="body-nav">
	<ul class="nav">
		<li><a href="#id-card">ID Card</a></li>
		<%= raw %(<li><a href="#checklist">Checklist</a></li>) unless @doc.checks.blank? %>
		<%= raw %(<li><a href="#reviews">Critiques</a></li>) unless @doc.reviews.blank? %>
		<%= raw %(<li><a href="#options">Alternatives</a></li>) unless @doc.themes.blank? %>
	</ul>
	<h2 class="page-title"><a href="#"><span class="prefix">VDF::</span><span class="short-name"><%= @doc.name %></span></a></h2>
</nav>

<section id="id-card" class="id-card">
	<div class="poster"><%= image_tag(@doc.poster_url) %></div>
	<h3 class="docu-title"><%= @doc.title %></h3>
	<h4 class="docu-subtitle"><%= @doc.subtitle %></h4>
	<p class="issue-date"><%= @doc.year %></p>
	<div class="tag-list">
		<a href="#">tags need handling</a>
		<a href="#">tag2</a>
		<a href="#">tag3</a>
	</div>

	<%= # renders tag with link if url provided, with name if only name provided, nothing otherwise
		content_tag(:p, :class => 'editor') do
			link_to_unless @doc.creator_url.blank?, @doc.creator, @doc.creator_url, rel: 'nofollow'
		end unless @doc.creator.blank?
	%>

	<div class="summary text-unit"><%= raw @doc.description %></div>
	<p class="impact">
		<%= raw @doc.impact %>
	</p>

</section>

<%= render 'checklist', checklist: @doc.checks %>
<%= render 'reviews', reviews: @doc.reviews %>
<%= render 'options', themes: @doc.themes %>

</section>
